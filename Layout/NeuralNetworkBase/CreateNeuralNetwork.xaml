<Window x:Class="NeuralNetworkBase.CreateNeuralNetwork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNetworkBase"
        mc:Ignorable="d"
        Title="CreateNeuralNetwork" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Height" Value="40" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <MenuItem Header="Otwórz" />
                <MenuItem Header="Zapisz" />
                <MenuItem Header="Zapisz Jako..." />
            </Menu>

            <TextBlock FontFamily="Tahoma" FontSize="36" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">Tworzenie sieci neuronowej</TextBlock>
            <TextBlock FontFamily="Tahoma" FontSize="24" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">Wybrany layer</TextBlock>
            <TextBlock FontFamily="Tahoma" FontSize="24" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10">1</TextBlock>
            <TextBlock FontFamily="Tahoma" FontSize="24" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center">Wybrany neuron</TextBlock>
            <TextBlock FontFamily="Tahoma" FontSize="24" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10">4</TextBlock>

            <Button Name="AddLayerButton" Content="Dodaj layer" Grid.Column="0" Grid.Row="4" />
            <Button Name="AddNeuronButton" Content="Dodaj neuron" Grid.Column="0" Grid.Row="5" />
            <Button Name="AddNeuronWeightButton" Content="Dodaj wagę" Grid.Column="0" Grid.Row="6" />
            <Button Name="NeuralNetworkCheckout" Content="Przegląd sieci" Grid.Column="0" Grid.Row="7" />

            <Button Name="DeleteLayerButton" Content="Usuń layer" Grid.Column="1" Grid.Row="4" />
            <Button Name="DeleteNeuronButton" Content="Usuń neuron" Grid.Column="1" Grid.Row="5" />
            <Button Name="DeleteNeuronWeightButton" Content="Usuń Wagę" Grid.Column="1" Grid.Row="6" />
            <Button Name="SaveNeuralNetworkButton" Content="Zapisz" Grid.Column="1" Grid.Row="7" />
        </Grid>
    </Grid>
</Window>
